# ---------------------------
# TrialBridge production env
# ---------------------------

# Django
DJANGO_SECRET_KEY=replace-with-very-long-random-secret
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=api.evercool.ae
CORS_ALLOWED_ORIGINS=https://evercool.ae,https://www.evercool.ae
TIME_ZONE=Asia/Dubai

# Public frontend URLs
NEXT_PUBLIC_SITE_URL=https://evercool.ae
NEXT_PUBLIC_API_BASE_URL=https://api.evercool.ae/api/v1
NEXT_PUBLIC_DEV_TECH_MODE=0
NEXT_PUBLIC_ENABLE_MOCK_FALLBACK=0

# Postgres (self-hosted in Docker)
POSTGRES_DB=trialbridge
POSTGRES_USER=trialbridge
POSTGRES_PASSWORD=replace-with-strong-db-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Celery/Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# LLM provider (Gemini)
GEMINI_API_KEY=replace-with-gemini-key
GEMINI_MODEL=gemini-2.0-flash
LLM_PROMPT_VERSION=v1
LLM_MODE=gemini

# Optional HF provider (leave blank if not using)
HF_API_TOKEN=
HF_LLM_ENDPOINT=
HF_EMBEDDING_ENDPOINT=
HF_EMBEDDING_DIMENSIONS=384

# Outreach
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_SMS=
TWILIO_FROM_WHATSAPP=
OUTREACH_DELIVERY_MODE=mock

# Matching
MATCH_TOP_K=20
MATCH_EVALUATE_TOP_N=5
MATCH_MAX_RUN_SECONDS=900
MATCH_LLM_MAX_CALLS_PER_RUN=200
MATCH_MIN_ELIGIBILITY_SCORE=35
MATCH_MIN_CONDITION_OVERLAP=0.06
MATCH_MIN_VECTOR_SIMILARITY=0.62
ALLOW_ANONYMOUS_COORDINATOR=0
PATIENT_UPLOAD_MAX_MB=10
PATIENT_PORTAL_TOKEN_MAX_AGE_SECONDS=1209600
INTAKE_DEFAULT_ORGANIZATION_SLUG=aga-khan-university-hospital

# Safety: do not seed demo data in production
SEED_DEMO=0
